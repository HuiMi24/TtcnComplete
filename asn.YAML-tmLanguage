patterns:

- name: keyword.operator.asn.
  match: (::=)

- name: string.quoted.single.asn 
  match: \'[01]*\'B
  comment: bitstring

- name: string.quoted.single.asn
  match: \'([a-eA-E0-9][a-eA-E0-9])*\'O
  comment: octetstring

- name: string.quoted.single.asn
  match: \'[a-eA-E0-9]*\'H
  comment: hexstring

- name: string.quoted.double.asn
  match: \".*\"
  comment: string

- name: constant.numeric.asn
  match: \b[\d+|infinity|\-infinity]+\b
  comment: numeric

- name: entity.name.type.asn
  match: var\s(\w+)\s(\w+)
  captures:
    '1': {name: entity.name.type.asn}
    '2': {name: variable.parameter.asn}
  comment: variable definition




