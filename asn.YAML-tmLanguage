  builtin_types:
    name: support.type.asn
    match: (?x) \b(ABSENT|PRESENT|SIZE|UNIVERSAL|APPLICATION|PRIVATE|INTEGER|REAL|STRING|BIT|BOOLEAN|OCTET
                   |NULL|EMBEDDED|PDV|BMPString|IA5String|TeletexString|GeneralString|GraphicString|
